<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="Mykhailo Derecha" id="1702148079141-1">
        <createTable tableName="addresses">
            <column autoIncrement="true" name="id" startWith="32201" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="addresses_pkey"/>
            </column>
            <column name="address_has_active" type="BOOLEAN"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="employee_id" type="INTEGER"/>
        </createTable>
    </changeSet>

    <changeSet author="Mykhailo Derecha" id="1702148079141-2">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" startWith="16109" type="INTEGER">
                <constraints nullable="false" primaryKey="true" primaryKeyName="users_pkey"/>
            </column>
            <column name="country" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(255)"/>
            <column name="is_banned" type="BOOLEAN"/>
            <column name="is_valid" type="BOOLEAN"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="document_id" type="INTEGER"/>
            <column name="is_deleted" type="BOOLEAN"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
